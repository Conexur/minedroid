<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.ryanm.minedroid" android:versionCode="13"
	android:versionName="Extra lucky bugfix edition">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		
		<activity android:name=".WorldChooserActivity" android:label="@string/app_name"
			android:screenOrientation="landscape">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".MineDroidActivity" android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:screenOrientation="landscape">
		</activity>

		<activity android:name="com.ryanm.preflect.PreflectActivity"
			android:screenOrientation="portrait" />

	</application>

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-sdk android:minSdkVersion="7" />
	<supports-screens android:anyDensity="true" />
</manifest> 